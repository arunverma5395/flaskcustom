#path where below steps are to be executed#############################################3/home/arun/d4dy/section-3/basic-env/##############################################3#flask2.dockerfile##########################333FROM python:3.7RUN pip install --upgrade pipRUN pip install requests flask==1.1.1WORKDIR /myappENV FLASK_APP=flask_example.pyENV FLASK_DEBUG=1#################33#command below is used to build above listed docker file named as 'flask2.dockerfile'##############################################docker build -t flask:v1 -f flask2.dockerfile .#######################################################################33#command below is used to run docker image with name as flask:v2###########################################docker run -it -v ${PWD}:/myapp -p 5000:5000 flask:v2 bash#it will start the container and open bash shell#here we need to run below command to start flask serverflask run --host=0.0.0.0      #above command will start the server which can be accessed in web server at http://localhost:5000######################################################